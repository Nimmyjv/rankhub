<!DOCTYPE html>
<html>
  <head>
    <title>AlexaKeeper</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= current_user.name %><br>
      <%= link_to 'Profile', edit_user_registration_path %><br>
      <%= link_to 'Log out', destroy_user_session_path, method: :delete %><br>
    <% else %>
      <%= link_to 'Log In', new_user_session_path %><br>
      <%= link_to 'Sign Up', new_user_registration_path %><br>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
