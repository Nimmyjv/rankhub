<% if user_signed_in? %>
  <h1>Alexa Keeper</h1>
  <%= form_for (@website) do |f| %>
    <%= f.label :url, "Domain" %>
    <%= f.text_field :url, class: "form-control" %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "OK" %>
  <% end %>
  <br>
  <% @urls.any? %>
    <% @urls.each do |url| %>
       <%= link_to url.url, url %>
       <%= button_to "Delete", website_path(url.id),
                     data: { confirm: "Are you sure?" },
                     method: :delete %><br>
    <% end %>
<% end %>
