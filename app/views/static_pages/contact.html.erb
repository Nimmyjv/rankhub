<%= render partial: 'layouts/header' %>
  <div class="container">

    <div class="row" style="padding-top:80px;padding-bottom:46px">
     <div class="col-md-6 col-md-offset-3">
      <h2>Contact Us</h2>
      <%= form_for (Contact.new) do |f| %>
     <div class="field">
            <%= f.label :name,"Name" %><br/>
            <%= f.text_field :name ,class: 'form-control' %>
        </div>

        <div class="field">
            <%= f.label :email ,"Email"%><br/>
            <%= f.email_field :email,  autofocus: true, class: 'form-control' %>
        </div>
 
        <div class="field">
            <%= f.label :message,"Message" %><br/>
            <%= f.text_area :message, size: "67x6" %>
        </div>
       
        <%= f.submit "OK", class: 'btn btn-success' %>
        <% end %>
       
    
  </div>
</div>
</div>