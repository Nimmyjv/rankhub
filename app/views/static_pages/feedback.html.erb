<%= render partial: 'layouts/header' %>
  <div class="container">
    <div class="row feedback-section">
      <div class="col-md-6 col-md-offset-3">
        <h2 class="text-center">Feedback</h2>
        <%= form_for (Feedback.new) do |f| %>
          <div class="field feedback-field">
            <%= f.label :name,"Name" %><br/>
              <%= f.text_field :name ,class: 'form-control' %>
          </div>
          <div class="field feedback-field">
            <%= f.label :email ,"Email"%><br/>
              <%= f.email_field :email,  autofocus: true, class: 'form-control' %>
          </div>
          <div class="field feedback-field">
            <%= f.label :message,"Message" %><br/>
              <%= f.text_area :message,class:"form-control", size: "67x6" %>
          </div>
          <br>
          <%= f.submit "Send", class: 'btn btn-success btn pull-right' %>
            <% end %>
      </div>
    </div>
    <div class="row feature-flash-message">
      <%= flash[:note]%>
    </div>
  </div>